!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Toothsome"
      %meta{:content => content_for?(:description) ? yield(:description) : "Toothsome", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    .navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'
          #element_to_pop_up 
    #main{:role => "main"}
      .container
        .content2
          .span12
            = render 'layouts/messages'
            = yield
    %nav.modal-footer
      imaginea. &copy; Copyright 2013.
      / ! end of .container
    / ! end of #main
