%section
  - if @product_prices.blank?
    %section
      %h4 Sorry,no results found.
  - else
    - @product_prices.each_slice(3).to_a.each do |row|
      %div.row-fluid.well
        %ul.thumbnails
          - row.each do |prod|
            %li.span4
              %a{:href => product_info_path(prod.id) , :class => 'thumbnail button'}
                %img{"data-src" => "holder.js/300x200", :alt => "300x200", :src => "#{prod.product.image_url}"}
                %br
                #caption
                  %span= prod.product.name
                  %br
                  #price_info
                    %img{ :src => image_path("currency.gif")}
                    = prod.price
