%div
  %ul.breadcrumb
    %li
      %a{:href => clients_path} Clients
      %span.divider /
    %li
      %a{:href => client_path(@client)} #{@client.name}
      %span.divider /
    %li
      %a{:href => products_path(:cid => @client)} Products
      %span.divider /
    %li.active
      = @product.name
  %ul.thumbnails
    %li.span4
      .thumbnail
        - if @product.photo.exists?
          = image_tag @product.photo.url(:medium)
          %h3
          = @product.name

        %p
          = @product.description
        %a.btn.btn-primary.btn-small{"data-toggle" => "modal", :href => edit_product_path(@product), :type => "button"} Edit product info  
